{
  "categories": {
    "correctness": "error",
    "perf": "warn",
    "style": "warn"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "no-console": "error",
    "sort-imports": [
      "error",
      {
        "ignoreDeclarationSort": true,
        "ignoreMemberSort": false,
        "ignoreCase": true,
        "memberSyntaxSortOrder": [
          "none",
          "all",
          "multiple",
          "single"
        ],
        "allowSeparatedGroups": true
      }
    ],
    "sort-keys": "off",
    "typescript/no-floating-promises": "error"
  }
}